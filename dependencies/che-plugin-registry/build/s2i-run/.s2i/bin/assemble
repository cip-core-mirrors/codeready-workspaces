#!/bin/bash

set -e

echo "--> Generating certificate"

/usr/share/container-scripts/httpd/pre-init/40-ssl-certs.sh

WORKDIR=$(pwd)
cd /tmp/src

if [ ! -d "source-build/v3/images" ] || [ ! -d "source-build/v3/plugins" ] || [ ! -d "source-build/v3/resources" ]; then

    echo "You repo must contains v3/images, v3/plugins and v3/resources folder in source build folder"
    exit 0
fi

mv source-build/v3 /var/www/html
mv source-build/.htaccess source-build/README.md /var/www/html/

echo "--> Give right to update html folder"
chown -R 1001:0 /var/www/html/
chmod -R ug+rwx /var/www/html/